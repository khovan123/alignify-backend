# ==============================================================================
# Environment Variables Template for Alignify Backend Docker
# Copy this file to .env and update with your actual values
# ==============================================================================

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Database Configuration
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/alignify?authSource=admin
MONGODB_DATABASE=alignify

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here-make-it-very-long-and-secure

# External Service Configuration
# Cloudinary (Image/Video hosting)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Google API (for Gemini AI)
GOOGLE_API_KEY=your-google-api-key

# Email Configuration
MAIL_USERNAME=your-mail-username
MAIL_PASSWORD=your-mail-password
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587

# Payment Configuration
# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # Use 'live' for production

# PayOS (Vietnamese payment gateway)
PAYOS_CLIENT_ID=your-payos-client-id
PAYOS_API_KEY=your-payos-api-key
PAYOS_CHECKSUM_KEY=your-payos-checksum-key

# JVM Configuration
JAVA_OPTS=-Xms512m -Xmx1024m

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_API=DEBUG

# CORS Configuration (for frontend integration)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://alignify-rose.vercel.app

# File Upload Configuration
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=50MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=50MB

# WebSocket Configuration
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,https://alignify-rose.vercel.app

# Actuator Configuration (Health checks, metrics)
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when_authorized